{
  "name": "driver_creation_steps",
  "version": "1.0.0-beta.8",
  "description": "Driver For Barco Overture Training",
  "main": "index.js",
  "scripts": {
	  "start": "node index.js"
  },
  "author": "Barco",
  "license": "MIT",
  "overture": {
    "brand": "Barco",
    "models": ["Overture Training"],
    "type": "device",
    "subtype": "display",
    "variables": [
      {
        "name": "Status",
        "type": "enum",
        "enums": ["Disconnected","Connected"]
      },
      {
        "name": "Power",
        "type": "enum",
        "enums": ["Off", "On"],
        "perform": {
          "action": "Set Power",
          "params": {
            "Status": "$string"
          }
        }
      },
      {
        "name": "Sources",
        "type": "enum",
        "enums": ["HDMI1", "HDMI2", "VGA1"],
        "perform": {
          "action": "Select Source",
          "params": {
            "Name": "$string"
          }
        }
      },
      {
        "name": "AudioLevel",
        "type": "integer",
        "min": 0,
        "max": 100,
        "perform": {
          "action": "Set Audio Level",
          "params": {
            "Level": "$value"
          }
        }
      }
    ],
    "commands": [
      {
        "name": "Set Power",
        "params": {
          "Status": {
            "type": "enum",
            "enums": ["Off","On"]
          }
        }
      },
      {
        "name": "Select Source",
        "params": {
          "Name": {
            "type": "string"
          }
        }
      },
      {
        "name": "Set Audio Level",
        "params": {
          "Level":{
            "type": "integer"
          }
        }
      }
    ],    
    "pointSetupSchema": {
      "type": "object",
      "title": "Barco Overture Training",
      "properties": {
        "host": {
          "title": "Host name or IP address:",
          "type": "string",
          "default": "dev.medialon.com"
        },
        "port": {
          "title": "Port:",
          "type": "integer",
          "default": 5400,
          "description": "Default: 5400"
        }
      },
      "required": [
        "host",
        "port"
      ]
    }
  }
}